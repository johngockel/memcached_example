<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %kvp%n</pattern>
        </encoder>
    </appender>

    <logger name="de.fhswf.nosql" level="debug" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>